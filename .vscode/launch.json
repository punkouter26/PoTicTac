{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch API Server",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-server",
            "program": "${workspaceFolder}/src/Po.TicTac.Api/bin/Debug/net10.0/Po.TicTac.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Po.TicTac.Api",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5000;https://localhost:5001"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Launch Client (Chrome)",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "start-client",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/src/Po.TicTac.Web"
        },
        {
            "name": "Launch PoTicTac (Aspire)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-apphost",
            "cwd": "${workspaceFolder}/src/Po.TicTac.AppHost",
            "program": "${workspaceFolder}/src/Po.TicTac.AppHost/bin/Debug/net10.0/Po.TicTac.AppHost.dll",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Login to the dashboard at (https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Attach to PoTicTac.Api",
            "type": "coreclr",
            "request": "attach"
        }
    ],
    "compounds": [
        {
            "name": "Full Stack (API + Client)",
            "configurations": ["Launch API Server", "Launch Client (Chrome)"],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "PoTicTac",
                "order": 1
            }
        }
    ]
}
