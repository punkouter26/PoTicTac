{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch PoTicTac (Aspire)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-apphost",
            "cwd": "${workspaceFolder}/src/Po.TicTac.AppHost",
            "program": "${workspaceFolder}/src/Po.TicTac.AppHost/bin/Debug/net10.0/Po.TicTac.AppHost.dll",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Login to the dashboard at (https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Attach to PoTicTac.Api",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}
